<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.witchshop.sharedlib.mapper.PipelineStepDefinitionMapper">

    <resultMap id="PipelineStepDefinitionMap" type="com.witchshop.sharedlib.dao.PipelineStepDefinition">
        <id property="id" column="id"/>
        <result property="pipelineId" column="pipeline_id"/>
        <result property="stepNumber" column="step_number"/>
        <result property="taskType" column="task_type"/>
        <result property="specialization" column="specialization" typeHandler="com.witchshop.sharedlib.typehandler.SpecializationTypeHandler"/>
        <result property="taskType" column="task_type"/>
        <result property="ingredients" column="ingredients" typeHandler="com.witchshop.sharedlib.typehandler.ListMapTypeHandler"/>
        <result property="requirements" column="requirements" typeHandler="com.witchshop.sharedlib.typehandler.ListMapTypeHandler"/>
    </resultMap>

    <select id="selectStepsBySpecialization"
            resultMap="PipelineStepDefinitionMap">
        SELECT id,
        pipeline_id,
        step_number,
        task_type,
        specialization,
        task_type,
        ingredients,
        requirements
        FROM pipeline_step_definitions
        WHERE specialization = #{specialization, typeHandler=com.witchshop.sharedlib.typehandler.SpecializationTypeHandler}
    </select>

</mapper>